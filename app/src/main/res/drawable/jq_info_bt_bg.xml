<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 圆角   android:radius="9dp"-->
    <corners
        android:topLeftRadius="8dp"
        android:topRightRadius="8dp"
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp"/><!-- 设置圆角半径 -->

    <!-- 大小 -->
    <size
        android:width="50dp"
        android:height="20dp"/><!-- 宽度和高度 -->
    <!-- 间隔 -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/><!-- 各方向的间隔 -->

    <!-- 填充 -->
    <solid
        android:color="@color/stabar_color"/><!-- 填充的颜色 -->

    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="@color/stabar_color"
        android:dashWidth="1dp"
        android:dashGap="2dp"/>
</shape>