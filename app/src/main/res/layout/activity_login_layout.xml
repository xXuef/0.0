<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/iocn_login_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--返回键-->
            <ImageView
                android:id="@+id/loginBackIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:src="@drawable/ic_keyboard_backspace_white_24dp" />
            <!--山水交城-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dip">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_login_top" />
            </LinearLayout>
            <!--登录-->
            <RelativeLayout
                android:id="@+id/inputPhoneRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="30dip"
                android:gravity="center">

                <EditText
                    android:id="@+id/inputPhoneEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@mipmap/icon_login_user"
                    android:drawablePadding="8dip"
                    android:hint="请输入手机号"
                    android:paddingBottom="15dip"
                    android:textColor="@color/white"
                    android:textColorHint="@color/tabitem_color2" />

                <ImageView
                    android:id="@+id/phoneDelIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dip"
                    android:src="@mipmap/icon_login_delete" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/inputPassRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="20dip"
                android:gravity="center">

                <EditText
                    android:password="true"
                    android:id="@+id/inputPassEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_login_password"
                    android:drawablePadding="8dip"
                    android:hint="请输入密码"
                    android:textColor="@color/white"
                    android:paddingBottom="15dip"
                    android:textColorHint="@color/tabitem_color2" />

                <ImageView
                    android:id="@+id/passLookIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dip"
                    android:src="@mipmap/icon_login_look" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dip"
                android:layout_marginRight="25dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/forgetPassTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dip"
                    android:text="忘记密码"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/registerTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dip"
                    android:text="注册"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="25dip"
                android:background="@drawable/loginout_bg"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big" />
            <!--第三方-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:text="快捷登录"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/loginQQIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dip"
                    android:src="@mipmap/icon_qq" />

                <ImageView
                    android:id="@+id/loginWechatIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dip"
                    android:src="@mipmap/icon_weixin" />

                <ImageView
                    android:id="@+id/loginWeiBoIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dip"
                    android:src="@mipmap/icon_weibo" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
