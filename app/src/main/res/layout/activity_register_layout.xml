<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/confirm_fist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/inputPhoneRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="20dip"
            android:gravity="center">

            <EditText
                android:id="@+id/inputPhoneEt"
                android:phoneNumber="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_login_user"
                android:drawablePadding="8dip"
                android:hint="请输入手机号"
                android:paddingBottom="15dip"
                android:textColor="@color/white"
                android:textColorHint="@color/tabitem_color2" />

            <ImageView
                android:id="@+id/phoneDelIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dip"
                android:src="@mipmap/icon_login_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inputPassRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:gravity="center">

            <EditText
                android:id="@+id/inputPassEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_verification"
                android:drawablePadding="8dip"
                android:hint="请输入验证码"
                android:paddingBottom="15dip"
                android:paddingTop="30dip"
                android:textColor="@color/white"
                android:textColorHint="@color/tabitem_color2" />

            <Button
                android:id="@+id/passLookIv"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/loginout_bg"
                android:text="获取验证码"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/registerpassone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:visibility="visible">

            <EditText
                android:id="@+id/registerpassEtone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_login_password"
                android:drawablePadding="8dip"
                android:hint="请输入密码"
                android:paddingBottom="15dip"
                android:textColor="@color/white"
                android:textColorHint="@color/tabitem_color2" />

            <ImageView
                android:id="@+id/registerpasslookIvone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dip"
                android:src="@mipmap/icon_login_look" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/registerpasstwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:visibility="visible">

            <EditText
                android:id="@+id/registerpassEttwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_login_password"
                android:drawablePadding="8dip"
                android:hint="请确认密码"
                android:paddingBottom="15dip"
                android:textColor="@color/white"
                android:textColorHint="@color/tabitem_color2" />

            <ImageView
                android:id="@+id/registerpasslookIvtwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dip"
                android:src="@mipmap/icon_login_look" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/registerNextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="40dip"
        android:background="@drawable/login_bg"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big" />
</LinearLayout>
